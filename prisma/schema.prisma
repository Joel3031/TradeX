// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Auth.js Models (Required for Login)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 2. User Model (Updated with all relations)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  phoneNumber   String?
  password      String?
  
  accounts      Account[]
  sessions      Session[]
  
  // App Relations
  trades        Trade[]
  strategies    Strategy[] // <--- THIS WAS MISSING
}

// 3. App Models
model Trade {
  id         String   @id @default(cuid())
  userId     String
  symbol     String
  type       String   // "BUY" or "SELL"
  entryPrice Decimal
  exitPrice  Decimal?
  quantity   Int
  stopLoss   Decimal
  entryDate  DateTime
  status     String   // "OPEN" or "CLOSED"
  pnl        Decimal?
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Strategy {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}